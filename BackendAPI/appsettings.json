{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/api/user/{**catch-all}"
        }
      },
      "streamRoute": {
        "ClusterId": "streamCluster",
        "Match": {
          "Path": "/api/stream/{**catch-all}"
        }
      },
      "analyticsRoute": {
        "ClusterId": "analyticsCluster",
        "Match": {
          "Path": "/api/analytics/{**catch-all}"
        }
      },
      "recommendationRoute": {
        "ClusterId": "recommendationCluster",
        "Match": {
          "Path": "/api/recommendation/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://auth-service.default.svc.cluster.local/api"
          }
        }
      },
      "userCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://user-service.default.svc.cluster.local/api"
          }
        }
      },
      "streamCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://stream-service.default.svc.cluster.local/api"
          }
        }
      },
      "analyticsCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://analytics-service.default.svc.cluster.local/api"
          }
        }
      },
      "recommendationCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://recommendation-service.default.svc.cluster.local/api"
          }
        }
      }
    }
  }
}
